<!DOCTYPE html>
<html lang="ru">
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= render 'layouts/javascripts' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-inner">
        <a class="brand" href="/">Fullbase</a>
        <ul class="nav">
          <li class="<%= 'active' if current_page?(clients_path) %>"><%= link_to 'Клиенты  ' , clients_path %></li>
          <li class="<%= 'active' if current_page?(numbers_path) %>"><%= link_to 'Номера'    , numbers_path %></li>
        </ul>
      </div>
    </div>
  </div>
  <section>
    <div class="container">
      <div class="row">
        <div class="span12">
          
          <%= bootstrap_flash %>

          <%= yield %>
        </div>
      </div>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </section>
</body>
</html>
